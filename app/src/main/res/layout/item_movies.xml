<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardMovie"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="#242424"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#242424"
        android:orientation="vertical"
        android:padding="12dp">

        <ImageView
            android:id="@+id/moviePoster"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:clickable="true"
            android:contentDescription="Capa"
            android:focusable="true"
            android:scaleType="centerCrop"
            android:visibility="visible" />

        <TextView
            android:id="@+id/noPosterText"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@android:color/darker_gray"
            android:clickable="true"
            android:contentDescription="Nao existe foto de filme"
            android:focusable="true"
            android:gravity="center"
            android:text="Poster não disponível"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:visibility="gone" />

        <!-- Botão para título do filme -->
        <TextView
            android:id="@+id/movieTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#242424"
            android:clickable="true"
            android:contentDescription="Titulo"
            android:ellipsize="end"
            android:focusable="true"
            android:maxLines="2"
            android:paddingTop="8dp"
            android:textColor="#CCA475"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/movieYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:contentDescription="Ano"
            android:focusable="true"
            android:textColor="#FDA31B"
            android:textSize="14sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
